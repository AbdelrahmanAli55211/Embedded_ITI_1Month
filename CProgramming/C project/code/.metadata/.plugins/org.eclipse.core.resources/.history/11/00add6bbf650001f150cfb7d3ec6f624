#ifndef MACROS_H_
#define MACROS_H_
#define Dprintf(...); { fflush(stdin);\
					fflush(stdout);\
					printf(__VA_ARGS__);\
					fflush(stdin);\
					fflush(stdout);}

typedef struct
{
	u8 name[50];
	u32 age;
	u8 gender;
	u32 id;
	u32 slot_num;
}patient;

typedef struct
{
	char name[50];
	u32 slot_num;
}slot;

#define slots_number 5
#endif /* MACROS_H_ */
